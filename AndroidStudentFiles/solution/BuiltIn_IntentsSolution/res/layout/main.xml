<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IntentActivity" >

   <Button
       android:id="@+id/btn_webbrowser"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="Open Browser"
       android:onClick="onClickWebBrowser" />

   <Button
       android:id="@+id/btn_makecalls"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/btn_webbrowser"
       android:layout_below="@+id/btn_webbrowser"
       android:onClick="onClickMakeCalls"
       android:text="Make Calls" />

   <Button
       android:id="@+id/btn_showmap"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/btn_makecalls"
       android:layout_below="@+id/btn_makecalls"
       android:onClick="onClickShowMap"
       android:text="Show Map" />

	<Button
       android:id="@+id/btn_launchMyBrowser"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/btn_makecalls"
       android:layout_below="@+id/btn_showmap"
       android:onClick="onClickLaunchMyBrowser"
       android:text="Launch My Browser" />

    <Button
            android:id="@+id/btn_createsms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_makecalls"
            android:layout_below="@+id/btn_launchMyBrowser"
            android:onClick="onClickCreateSMS"
            android:text="Create SMS" />


</RelativeLayout>













